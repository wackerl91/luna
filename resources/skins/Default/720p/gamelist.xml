<?xml version="1.0" encoding="UTF-8"?>
<window>
    <animation effect="fade" time="500" start="50" end="100">WindowOpen</animation>
    <animation effect="fade" time="500" start="100" end="50">WindowClose</animation>
    <controls>
        <control type="image">
            <description>luna logo</description>
            <top>50</top>
            <left>50</left>
            <width>100</width>
            <height>50</height>
            <aspectratio>keep</aspectratio>
            <texture>common/luna.png</texture>
        </control>
        <!-- System Clock widget is copied from the old OSMC skin to match their location -->
        <control type="label">
            <right>47</right>
            <top>44</top>
            <width>800</width>
            <height>40</height>
            <align>right</align>
            <label>$INFO[System.Time]</label>
            <font>Large</font>
            <textcolor>ColorHeading</textcolor>
        </control>
        <control type="label">
            <right>47</right>
            <top>88</top>
            <width>800</width>
            <height>33</height>
            <align>right</align>
            <label>$INFO[System.Date]</label>
            <font>XSmall</font>
            <textcolor>ColorDetails</textcolor>
        </control>

        <control type="label" id="4">
            <description>Host Name</description>
            <top>140</top>
            <left>100</left>
            <font>XSmall</font>
            <textcolor>ColorHeading</textcolor>
        </control>

        <control type="image">
            <description>background image</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>720</height>
            <fadetime>200</fadetime>
            <texture colordiffuse="50D3D3D3">$INFO[Container(50).ListItem(0).Property(fanart)]</texture>
        </control>

        <control type="image" id="2">
            <description>Host Online Image</description>
            <top>140</top>
            <left>50</left>
            <width>30</width>
            <height>30</height>
            <aspectratio>keep</aspectratio>
            <texture colordiffuse="5077B900">common/host.png</texture>
        </control>
        <control type="image" id="3">
            <description>Host Offline Image</description>
            <top>140</top>
            <left>50</left>
            <width>30</width>
            <height>30</height>
            <aspectratio>keep</aspectratio>
            <texture colordiffuse="50FE0000">common/host.png</texture>
        </control>

        <control type="panel" id="50">
            <left>50</left>
            <top>200</top>
            <width>1180</width>
            <height>500</height>
            <visible>true</visible>
            <viewtype label="3D list">list</viewtype>
            <orientation>horizontal</orientation>
            <scrolltime tween="sine" easing="out">200</scrolltime>
            <itemlayout width="225" height="300">
                <control type="image">
                    <top>10</top>
                    <left>0</left>
                    <width>200</width>
                    <height>320</height>
                    <animation effect="zoom" start="110,110" end="100,100" center="auto" time="300">Unfocus</animation>
                    <texture colordiffuse="50696969">common/white.png</texture>
                </control>
                <control type="image">
                    <top>0</top>
                    <left>0</left>
                    <width>200</width>
                    <height>267</height>
                    <aspectratio>keep</aspectratio>
                    <animation effect="zoom" start="110,110" end="100,100" center="auto" time="300">Unfocus</animation>
                    <texture>$INFO[ListItem.Art(thumb)]</texture>
                </control>
                <control type="label">
                    <left>10</left>
                    <top>290</top>
                    <width>180</width>
                    <height>20</height>
                    <font>font13</font>
                    <textcolor>FF808080</textcolor>
                    <align>center</align>
                    <wrapmultiline>true</wrapmultiline>
                    <animation effect="slide" end="0,0" time="300">Unfocus</animation>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout width="325" height="150">
                <control type="image">
                    <top>10</top>
                    <left>0</left>
                    <width>200</width>
                    <height>320</height>
                    <animation effect="zoom" start="100,100" end="110,110" center="auto" time="300">Focus</animation>
                    <texture colordiffuse="E6000000">common/white.png</texture>
                </control>
                <control type="image">
                    <top>0</top>
                    <left>0</left>
                    <width>200</width>
                    <height>267</height>
                    <aspectratio>keep</aspectratio>
                    <animation effect="zoom" start="100,100" end="110,110" center="auto" time="300">Focus</animation>
                    <texture>$INFO[ListItem.Art(thumb)]</texture>
                </control>
                <control type="label">
                    <left>10</left>
                    <top>290</top>
                    <width>180</width>
                    <height>20</height>
                    <font>font13</font>
                    <textcolor>FFE0B074</textcolor>
                    <align>center</align>
                    <wrapmultiline>true</wrapmultiline>
                    <animation effect="slide" end="0,10" time="300">Focus</animation>
                    <info>ListItem.Label</info>
                </control>
            </focusedlayout>
        </control>
    </controls>
</window>